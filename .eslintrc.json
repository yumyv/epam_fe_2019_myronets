{
  "root": true,
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "dot-notation": "error",
    "dot-location": [
      "error",
      "property"
    ],
    "eqeqeq": "error",
    "curly": "error",
    "consistent-return": "warn", // TODO: Switch it to error
    "complexity": [
      "error",
      {
        "max": 5
      }
    ],
    "no-multi-spaces": "error",
    "no-extra-bind": "error",
    "no-undefined": "error",
    "no-void": "error",
    "camelcase": "warn", // TODO: should be error. Conflicts with BEM notation using underscore for modifiers
    "linebreak-style": 0,
    "import/no-named-as-default": 0,
    "func-names": [
      "error",
      "never"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "func-style": "off",
    "key-spacing": "error",
    "keyword-spacing": "error",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "max-depth": [
      "error",
      2
    ],
    "max-len": [
      "off", // TODO: Discuss this
      120
    ],
    "max-lines": [
      "warn", // TODO: Switch it to error
      300
    ],
    "max-nested-callbacks": [
      "error",
      3
    ],
    "max-params": [
      "warn",  // TODO: Switch to error
      3
    ],
    "max-statements": [
      "error",
      15
    ],
    "max-statements-per-line": [
      "error",
      {
        "max": 1
      }
    ],
    "multiline-ternary": [
      "error",
      "always-multiline"
    ],
    "new-parens": "error",
    "no-multi-assign": "error",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 1
      }
    ],
    "no-negated-condition": "error",
    "no-tabs": "error",
    "no-trailing-spaces": "error",
    "no-unneeded-ternary": "error",
    "object-curly-newline": [
      "error",
      {
        "consistent": true
      }
    ],
    "object-curly-spacing": [
      "error",
      "never"
    ],
    "one-var": [
      "error",
      "never"
    ],
    "operator-linebreak": "error",
    "padded-blocks": [
      "error",
      "never"
    ],
    "quote-props": [
      "error",
      "as-needed"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": "error",
    "semi-spacing": "error",
    "semi-style": "error",
    "space-before-blocks": "error",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "space-in-parens": "error",
    "space-infix-ops": "error",
    "space-unary-ops": "error",
    "spaced-comment": "error",
    "switch-colon-spacing": "error",
    "template-tag-spacing": "error",
    "arrow-body-style": ["off"],
    "arrow-parens": "error",
    "arrow-spacing": "error",
    "no-confusing-arrow": [
      "error",
      {
        "allowParens": true
      }
    ],
    "no-duplicate-imports": "error",
    "no-useless-computed-key": "error",
    "no-useless-constructor": "error",
    "no-var": "error",
    "object-shorthand": "error",
    "prefer-arrow-callback": "error",
    "prefer-const": "error",
    "prefer-template": "error",
    "rest-spread-spacing": "error",
    "template-curly-spacing": [
      "error",
      "never"
    ]
  }
}
